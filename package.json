{
  "name": "coinbase-smartcontracts",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "This project demonstrates a basic Hardhat use case. It comes with a sample contract, a test for that contract, and a Hardhat Ignition module that deploys that contract.",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomicfoundation/hardhat-web3-v4": "^1.0.0",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@tenderly/hardhat-tenderly": "^2.3.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/find-up": "^4.0.0",
    "@types/mocha": "^10.0.7",
    "@rocketh/deploy": "0.10.12",
    "@rocketh/deploy-proxy": "^0.10.8",
    "@rocketh/deploy-router": "^0.10.7",
    "@rocketh/doc": "^0.10.7",
    "@rocketh/export": "^0.10.8",
    "@rocketh/signer": "^0.10.6",
    "@rocketh/verifier": "^0.10.9",
    "@types/fs-extra": "^11.0.4",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "typescript": "^5.5.2",
    "web3": "^4.10.0",
    "as-soon": "^0.0.9",
    "eip-1193": "^0.5.0",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.22.5",
    "hardhat-rocketh": "^4.0.19",
    "ldenv": "^0.3.10",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "rocketh": "^0.10.18",
    "rollup-plugin-node-builtins": "^2.1.2",
    "set-defaults": "^0.0.2",
    "solidity-kit": "^0.5.1",
    "solidity-proxy": "^0.4.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "viem": "^2.16.2",
    "vitest": "^4.0.8"
  },
    "scripts": {
    "prepare": "set-defaults .vscode && pnpm compile",
    "docgen": "ldenv -m hardhat pnpm run deploy hardhat --save-deployments true --skip-prompts ~~ pnpm rocketh-doc -n @@MODE --except-suffix _Implementation,_Proxy,_Router,_Route ~~ @@",
    "local_node": "hardhat node",
    "compile": "hardhat compile",
    "compile:watch": "as-soon -w src pnpm compile",
    "execute": "ROCKETH_SKIP_ESBUILD=true ldenv -n HARDHAT_NETWORK -m localhost tsx @@",
    "fork:execute": "ROCKETH_SKIP_ESBUILD=true ldenv -m localhost tsx @=HARDHAT_FORK=@@MODE @@",
    "deploy": "pnpm compile && ldenv hardhat --network @@MODE deploy @@",
    "fork:deploy": "pnpm compile && ldenv hardhat @=HARDHAT_FORK=@@MODE --network @@MODE deploy @@",
    "deploy:dev": "ldenv hardhat --network @@MODE deploy --skip-prompts @@",
    "deploy:watch": "ldenv -m localhost as-soon -w generated -w deploy pnpm run deploy:dev @@MODE @@",
    "verify": "ldenv rocketh-verify -n @@MODE @@",
    "test": "pnpm compile && vitest",
    "export": "rocketh-export",
    "export-script-data": "ldenv rocketh-export -n @@MODE --ts ./scripts/data/contracts.ts @@",
    "start": "zellij --layout zellij.kdl a $npm_package_name || zellij --layout zellij.kdl -s $npm_package_name",
    "stop": "zellij kill-session $npm_package_name",
    "format:check": "prettier --check .",
    "format": "prettier --write ."
  }
}
